<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="ULTIMO MENSAJE RECIBIDO"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/regCel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE CELULARES"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/nomMar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de marca:"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/txtMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="serif-monospace"
        android:background="@drawable/diseno_text"
        android:textSize="28dp"/>

    <TextView
        android:id="@+id/modDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo del dispositivo:"
        android:layout_marginTop="5dp"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/txtModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="28dp"
        android:background="@drawable/diseno_text"
        android:inputType="textPersonName"
        android:fontFamily="serif-monospace"/>


    <TextView
        android:id="@+id/prec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio (solo numeros):"
        android:layout_marginTop="5dp"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:background="@drawable/diseno_text"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif-monospace"/>


    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:background="@drawable/diseno_botones"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LIMPIAR CAMPOS"
        android:background="@drawable/diseno_botones"
        />

    <TextView
        android:id="@+id/celReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="CELULARES REGISTRADOS"
        android:textColor="#000000"
        android:fontFamily="serif-monospace"
        />

    <ListView
        android:id="@+id/listaCelulares"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>